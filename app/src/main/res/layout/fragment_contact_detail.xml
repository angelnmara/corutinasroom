<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactDetailFragment">

    <ImageView
        android:id="@+id/iv_image_contact_detail"
        android:src="@mipmap/ic_launcher"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp">
    </ImageView>

    <TextView
        android:id="@+id/txt_name_contact_detail"
        android:text="Dave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@+id/iv_image_contact_detail"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_contact_detail">
    </TextView>

    <TextView
        android:id="@+id/txt_phone_contact_detail"
        android:text="5568009630"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@+id/txt_name_contact_detail"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_contact_detail">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>